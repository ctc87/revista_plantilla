    if anchor
      script.
        $( document ).ready(function() {
          window.onload = window.location.hash = '#{anchor}';
          setTimeout(function(){ 
            var activeTab = window.location.hash;
            $(".tab-pane").removeClass("active in");
            $(activeTab).addClass("active in");
            },1);
        });
