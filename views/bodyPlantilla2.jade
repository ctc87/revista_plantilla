include mixinsAnunciosNoticias 

.featured.container
  .row
    .col-md-8
      // Carousel
      #carousel-example-generic.carousel.slide(data-ride='carousel')
        // Indicators
        ol.carousel-indicators
            each client, index in clients2x4
                +indicators(index)
        // Wrapper for slides
        .carousel-inner
            each client, index in clients2x4
                +anuncio2x4(clients2x4, index)
            
        // Controls
        a.left.carousel-control(href='#carousel-example-generic', data-slide='prev')
          span.glyphicon.glyphicon-chevron-left
        a.right.carousel-control(href='#carousel-example-generic', data-slide='next')
          span.glyphicon.glyphicon-chevron-right
    #main-content.col-md-4
      .box
        a(href='/news?id_municipio=#{publireportaje.id_municipio}&id_noticia=#{publireportaje.id_noticia}')
          h2.vid-name #{publireportaje.titular}
        .info
          h5
            | Fuente 
            a(href='#{publireportaje.fuente_enclace}') #{publireportaje.fuente_nombre}
          span
            i.fa.fa-calendar
            |  #{publireportaje.fecha}
        .wrap-vid
          .zoom-container
            .zoom-caption
            img(src='#{publireportaje.imagen}')
            
.featured.container
  .row
    .col-md-12
      #owl-demo2.owl-carousel
        each client, index in clients1x2
            +anuncio1x1(clients1x2, index)
each grupo, i in clients1x1Noticias 
  .featured.archive-page.container
    div
      .row
        #main-content.col-md-12
          each not, index in grupo.noticias
            +noticias(grupo.noticias, index)
  - if(grupo.anuncios) {
    .featured.container
      .owl-demo.owl-carousel
        each cli, index2 in grupo.anuncios
            +anuncio1x1(grupo.anuncios, index2)
            
  - }


script.
  $(document).ready(function() {
  $(".owl-demo").owlCarousel({
  autoPlay: 3000,
  items : 5,
  itemsDesktop : [600,5],
  itemsDesktopSmall : [600,5]
  });
  });


